<div class="container">
  <h2>Edit Product</h2>
  <form action="/products/edit" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="ProID" value="{{product.ProID}}">  <!-- Thêm input ẩn cho ProID -->

    <div class="mb-3">
      <label for="ProName" class="form-label">Product Name</label>
      <input type="text" class="form-control" id="ProName" name="ProName" value="{{product.ProName}}" required>
    </div>

    <div class="mb-3">
      <label for="TinyDes" class="form-label">Tiny Description</label>
      <input type="text" class="form-control" id="TinyDes" name="TinyDes" value="{{product.TinyDes}}" required>
    </div>

    <div class="mb-3">
      <label for="FullDes" class="form-label">Full Description</label>
      <textarea class="form-control" id="FullDes" name="FullDes" rows="4" required>{{product.FullDes}}</textarea>
    </div>

    <div class="mb-3">
      <label for="Price" class="form-label">Price</label>
      <input type="number" class="form-control" id="Price" name="Price" step="0.01" value="{{product.Price}}" required>
    </div>

    <div class="mb-3">
      <label for="CatID" class="form-label">Category ID</label>
      <input type="number" class="form-control" id="CatID" name="CatID" value="{{product.CatID}}" required>
    </div>

    <div class="mb-3">
      <label for="Quantity" class="form-label">Quantity</label>
      <input type="number" class="form-control" id="Quantity" name="Quantity" value="{{product.Quantity}}" required>
    </div>

    <div class="mb-3">
      <label for="formFile" class="form-label">Upload Product Image</label>
      <input class="form-control" type="file" id="formFile" name="ProImage">
      <p>Current Image: <img src="/{{product.ProImage}}" alt="Product Image" class="img-fluid" style="max-width: 200px; margin-top: 10px;"></p> <!-- Hiển thị ảnh hiện tại -->
    </div>

    <button type="submit" class="btn btn-success">Update Product</button>
  </form>
</div>
